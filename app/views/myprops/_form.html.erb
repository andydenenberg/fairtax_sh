<%= form_for @myprop, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> /Myprop</legend>

    <div class="control-group">
      <%= f.label :pin, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :pin, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :street, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :street, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :city, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :city, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :status, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :status, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :list_num, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :list_num, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :user_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :user_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', myprops_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
