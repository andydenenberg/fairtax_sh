<h1>Class Codes</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Cc</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @class_codes.each do |class_code| %>
      <tr>
        <td><%= class_code.id %></td>
        <td><%= link_to class_code.cc, class_code_path(class_code) %></td>
        <td><%= class_code.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_class_code_path(class_code), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', class_code_path(class_code), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_class_code_path, :class => 'btn btn-primary' %>
