<h1>Details</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Pin</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @details.each do |detail| %>
      <tr>
        <td><%= detail.id %></td>
        <td><%= link_to detail.pin, detail_path(detail) %></td>
        <td><%= detail.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_detail_path(detail), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', detail_path(detail), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= page_navigation_links @properties %>

<%= link_to 'New', new_detail_path, :class => 'btn btn-primary' %>
